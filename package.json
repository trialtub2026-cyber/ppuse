{
  "name": "crm-portal",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "validate:code": "node scripts/validate-code.js --verbose",
    "validate:staged": "node scripts/validate-code.js --staged --verbose",
    "validate:pre-commit": "node scripts/validate-code.js --pre-commit",
    "fix:unicode-escapes": "node scripts/validate-code.js --fix --verbose",
    "fix:staged": "node scripts/validate-code.js --fix --staged",
    "quality:check": "npm run lint && npm run validate:code",
    "quality:fix": "npm run lint --fix && npm run fix:unicode-escapes",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@hookform/resolvers": "^3.3.1",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@supabase/supabase-js": "^2.38.0",
    "@tailwindcss/typography": "^0.5.18",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "axios": "^1.12.2",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^1.2.1",
    "cmdk": "^1.1.1",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^2.30.0",
    "events": "^3.3.0",
    "lucide-react": "^0.263.1",
    "node-cron": "^4.2.1",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.4",
    "react-router-dom": "^6.8.1",
    "readable-stream": "^4.7.0",
    "recharts": "^2.8.0",
    "serve": "^14.2.5",
    "sonner": "^1.0.3",
    "stream-browserify": "^3.0.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "util": "^0.12.5",
    "web-push": "^3.6.7",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run validate:pre-commit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "node scripts/validate-code.js --fix --staged"
    ]
  }
}